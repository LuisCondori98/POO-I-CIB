@{

    ViewBag.Title = "Operaciones";

}



<!-- Agrega Bootstrap 5 CDN si no lo tienes en el _Layout -->

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">



<div class="container my-5">

    <h2 class="text-center mb-4 fw-bold text-primary">🔢 Operaciones Matemáticas</h2>



    <!-- Formulario de ingreso -->

    <div class="row justify-content-center mb-4">

        <div class="col-md-6">

            @using (Html.BeginForm())

            {

                <div class="card shadow-lg border-primary border-2">

                    <div class="card-body bg-light">

                        <label for="n" class="form-label text-dark"><em>Ingrese un Número</em></label>

                        @Html.TextBox("n", 0, htmlAttributes: new

                        {

                          @class = "form-control form-control-lg mb-3 border-primary",

                          type = "number",

                          min = "0",

                          id = "n"

                        })

                        <div class="text-end">

                            <button class="btn btn-warning btn-lg text-dark fw-bold">🔍 Calcular</button>

                        </div>

                    </div>

                </div>

            }

        </div>

    </div>



    <!-- Resultados en tarjetas -->

    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">

        <div class="col">

            <div class="card text-white bg-primary h-100 shadow">

                <div class="card-body text-center">

                    <h5 class="card-title">Cantidad de Divisores</h5>

                    <p class="card-text fs-4">@ViewBag.qdivisores</p>

                </div>

            </div>

        </div>

        <div class="col">

            <div class="card text-white bg-success h-100 shadow">

                <div class="card-body text-center">

                    <h5 class="card-title">Suma de Divisores</h5>

                    <p class="card-text fs-4">@ViewBag.sdivisores</p>

                </div>

            </div>

        </div>

        <div class="col">

            <div class="card text-white bg-danger h-100 shadow">

                <div class="card-body text-center">

                    <h5 class="card-title">Suma de Dígitos</h5>

                    <p class="card-text fs-4">@ViewBag.sdigitos</p>

                </div>

            </div>

        </div>

        <div class="col">

            <div class="card text-white bg-warning h-100 shadow">

                <div class="card-body text-center">

                    <h5 class="card-title">Factorial</h5>

                    <p class="card-text fs-4 text-dark">@ViewBag.factorial</p>

                </div>

            </div>

        </div>

        <div class="col">

            <div class="card text-white bg-info h-100 shadow">

                <div class="card-body text-center">

                    <h5 class="card-title">Suma de Números Pares</h5>

                    <p class="card-text fs-4">@ViewBag.sumpares</p>

                </div>

            </div>

        </div>

        <div class="col">

            <div class="card text-white bg-secondary h-100 shadow">

                <div class="card-body text-center">

                    <h5 class="card-title">Suma de Números Impares</h5>

                    <p class="card-text fs-4">@ViewBag.sumimpares</p>

                </div>

            </div>

        </div>

    </div>

</div>
