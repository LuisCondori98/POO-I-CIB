@model IEnumerable<appWeb05.Models.Cliente>

@{
    ViewBag.Title = "Index";
}

<h2>CRUD Clientes</h2>
<hr />
<p>
    @Html.ActionLink("Nuevo", "Create", null, new { @class = "btn btn-primary" })
    @Html.ActionLink("Búsqueda", "Filtro", null, new { @class = "btn btn-success" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Dni)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Nombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Direccion)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Fono)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Dni)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Nombre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Direccion)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Fono)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { dni = item.Dni }) |
            @Html.ActionLink("Detalle", "Details", new { dni = item.Dni }) |
            @Html.ActionLink("Eliminar", "Delete", new { dni = item.Dni })
        </td>
    </tr>
}

</table>
